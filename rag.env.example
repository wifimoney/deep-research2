# Core model configuration
OPENAI_API_KEY="your-openai-api-key"
EXASEARCH_API_KEY="your-exa-api-key"
EXA_API_KEY="your-exa-api-key" # optional alias
MODEL="openai/gpt-4o"

# Storage - Single PostgreSQL database for everything
# All storage (memory, semantic recall, RAG vectors) uses this one connection
DATABASE_URL="postgresql://user:password@localhost:5432/mastra_db"
# For local development with LibSQL:
# DATABASE_URL="file:./storage.db"

# RAG configuration
EMBEDDINGS_MODEL="text-embedding-3-small"
EMBEDDINGS_DIMENSIONS="1536"
RAG_TOP_K="5"
RAG_MIN_SCORE="0"



